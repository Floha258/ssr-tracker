{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/horiz/**",
        "destination": "/horiz-ootrr-tracker.html"
      },
      {
        "source": "/tsgmain/**",
        "destination": "/tsg-vertical.html"
      },
      {
        "source": "/tsgmeds/**",
        "destination": "/tsg-dungeon-rewards.html"
      },
      {
        "source": "/**",
        "destination": "/ssr-tracker.html"
      }
    ],
    "ignore": [
      "firebase.json",
      ".idea/*",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
